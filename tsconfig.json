{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "allowJs": true,
      "checkJs": true,
      "resolveJsonModule": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
        "webpack-env",
        "jest",
        "vite"
      ],
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "lib": [
        "es6",
        "es5",
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  


